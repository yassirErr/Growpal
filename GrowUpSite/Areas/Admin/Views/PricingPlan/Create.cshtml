@model GrowUp.Model.PayMonthlyPlan

<div class="main-content">

    <div class="page-content">

        <!-- start page title -->
        <div class="page-title-box">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="page-title">
                            <h4>Form</h4>
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a>Growpal</a></li>


                            </ol>
                        </div>
                    </div>
             
                </div>
            </div>
        </div>
        <!-- end page title -->
        <form action="" method="post">

            <div class="container-fluid">

                <div class="page-content-wrapper">



                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                            
                                    <h4 class="header-title">Create Price Month information</h4>

                                    <div class="row mb-3">
                                        <label asp-for="PriceMonthly" class="col-sm-2 col-form-label">Price Monthly</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" placeholder="Price Monthly" asp-for="PriceMonthly">
                                        </div>
                                    </div>       
                                 
                                    <div class="row mb-3">
                                        <label asp-for="ContactMethode" class="col-sm-2 col-form-label">Contact Methode</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" placeholder="Contact Methode" asp-for="ContactMethode">
                                        </div>
                                    </div>      
                                    <div class="row mb-3">
                                        <label asp-for="Notes" class="col-sm-2 col-form-label">Notes</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" placeholder="Notes" asp-for="Notes">
                                        </div>
                                    </div>      
                                    <div class="row mb-3">
                                        <label asp-for="Period" class="col-sm-2 col-form-label">Period</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" placeholder="Notes" asp-for="Period">
                                        </div>
                                    </div>     
                                    <div class="row mb-3">
                                        <label asp-for="SelectedOption" class="col-sm-2 col-form-label">Option</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" placeholder="Notes" asp-for="SelectedOption">
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->
                    <button class="btn btn-success waves-effect waves-light" type="submit" style="width:150px">Create </button>
                    <a asp-controller="PricingPlan" asp-action="Index" class="btn btn-secondary" style="width:150x">
                        Back To the List
                    </a>



                </div>


            </div> <!-- container-fluid -->
        </form>
    </div>
    <!-- End Page-content -->

@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- Sign Up -->
<div class="user-form-area pt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex justify-content-center">
                <div class="user-content">
                    <div class="d-table">
                        <div class="d-table-cell">
                            <div class="user-content-inner">
                                <div class="top">
                                
                                    <h2>@ViewData["Title"]</h2>
                                </div>
                               
                                <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                
                                                <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                         
                                            </div>
                                        </div>
                                

                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Name" />
                                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="PhoneNumber"/>
                                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                           

                                            <div class="form-group">
                                                <select asp-for="Input.CountyNameId" asp-items="@Model.Input.CountryList" class="form-select">
                                                    <option disabled selected> - Select Country - </option>
                                                </select>
                                            </div>

                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="Postal Code" />
                                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-lg-12">
                                            <button type="submit" class="btn">Register</button>
                                        </div>

                                    </div>
                                </form>
                                <div class="bottom ">
                          
                                    <h4>OR</h4>
                                    <ul>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class='bx bxl-facebook'></i>
                                                Connect with Facebook
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class='bx bxl-google'></i>
                                                Connect with Google
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Sign Up -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
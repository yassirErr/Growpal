@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="user-form-area pt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="d-flex justify-content-center">
                <div class="user-content">
                    <div class="d-table">
                        <div class="d-table-cell">
                            <div class="user-content-inner">
                                <div class="top">

                                    <h2>@ViewData["Title"]</h2>
                                </div>
                                <form id="account" method="post">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="UserName or Email" />

                                               
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password">
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-start">
                                            <div class="checkbox">
                                                <label asp-for="Input.RememberMe" class="form-label">
                                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <br />
                                        <br />
                              
                                        <div class="col-lg-12">
                                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                                        </div>

                                        <br />
                                        <br />
                                        <br />
                                   
                                        <div>
                                            <p class="d-flex justify-content-start">
                                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                            </p>
                                        </div>
                                    </div>
                                </form>
                                <div class="bottom">
                                    <p>Are You New Member? <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></p>
                                    <h4>OR</h4>
                                    <ul>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class='bx bxl-facebook'></i>
                                                Connect with Facebook
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" target="_blank">
                                                <i class='bx bxl-google'></i>
                                                Connect with Google
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

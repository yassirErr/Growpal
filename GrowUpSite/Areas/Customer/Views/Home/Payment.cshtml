@model IEnumerable<PayMonthlyPlan>

<!-- Pricing -->
<section class="pricing-area pt-100 pb-70">
    <div class="container">
        <div class="section-title two">
            <h2>Affordable Pricing</h2>
        </div>

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="row">

                    @foreach (var obj in Model)
                    {

                        <div class="col-sm-6 col-lg-4 p-0">
                            <div class="pricing-item">
                                <div class="middle">
                                    <h3>@obj.PriceMonthly.ToString("c")/<span class="right">Month</span></h3>
                                </div>
                                <div class="end">
                                    <ul>
                                        <li>
                                            <i class="flaticon-curved-arrow-pointing-to-right"></i>
                                            @obj.Period
                                            <i class="flaticon-exclamation two"></i>
                                        </li>
                                   
                                        <li>
                                            <i class="flaticon-curved-arrow-pointing-to-right"></i>
                                            @obj.ContactMethode
                                            <i class="flaticon-exclamation two"></i>
                                        </li>

                                        <li>
                                            <i class="flaticon-curved-arrow-pointing-to-right"></i>
                                            @obj.Notes
                                            <i class="flaticon-exclamation two"></i>
                                        </li>
                                    </ul>
                                    <a asp-controller="Summary" asp-action="Sumproved" asp-route-id="@obj.Id" class="cmn-btn">
                                        Get Started
                                        <i class='bx bx-plus'></i>
                                    </a>
                                </div>
                            </div>
                        </div>


                    }



                </div>
            </div>

        </div>
    </div>
</section>
<!-- End Pricing -->
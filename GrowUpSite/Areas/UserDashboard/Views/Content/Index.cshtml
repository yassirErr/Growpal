@model IEnumerable<GrowUp.Model.Contentube>

<!-- Page Content-->
<div class="page-content">

    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Crovex</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">UI Kit</a></li>
                            <li class="breadcrumb-item active">Datatable</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Datatable</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div>
        <!-- end page title end breadcrumb -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Bordered table</h4>
                

                        <div class="table-responsive">
                            <table class="table table-bordered mb-0 table-centered">

                                <thead>
                                    <tr>
                                        <th>Content Name</th>
                                        <th>Content Url</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var obj in Model)
                                    {
                                        <tr>
                                            <td>@obj.Content_name</td>
                                            <td style="width:15px">@obj.Content_Url</td>

                                            <td>
                                                <div class="button-items">

                                                    <a asp-controller="Content" asp-action="Show" asp-route-id="@obj.Id" class="btn btn-outline-secondary waves-effect waves-light" style="width:150px"> Show  </a>


                                                    <a asp-controller="Content" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-outline-primary waves-effect waves-light" style="width:150px"> Edit  </a>


                                                    <form id="delete-form" asp-controller="Content" asp-action="Delete" asp-route-id="@obj.Id" method="post">
                                                        @Html.AntiForgeryToken()

                                                        <button type="submit" class="btn btn-outline-danger waves-effect waves-light" onclick="return confirm('Are you sure you want to delete this content?')" style="width:150px">Delete</button>
                                                    </form>


                                                </div>
                                            </td>

                                        </tr>
                                    }
                       
                        
                        
                                </tbody>
                            </table><!--end /table-->
                        </div><!--end /tableresponsive-->
                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div>
</div>

@section Scripts{
    <script src="~/site/dashboard/js/api.js"></script>
    <script src="~/site/dashboard/js/publishAPI.js"></script>


}
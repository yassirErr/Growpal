@model IEnumerable<GrowUp.Model.Contentube>

<!-- Page Content-->
<div class="page-content">

    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="UserDashboard" asp-controller="User" asp-action="index">GrowPal</a></li>
                            <li class="breadcrumb-item active">Content Datatable</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Datatable</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div>
        <!-- end page title end breadcrumb -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

               
                

                        <div class="table-responsive">
                            <table class="table table-bordered mb-0 table-centered">

                                <thead>
                                    <tr>
                                        <th>Content Name</th>
                                        <th>Content Url</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var obj in Model)
                                    {
                                        <tr>
                                            <td >@obj.Content_name</td>
                                            <td style="width:15px">@obj.Content_Url</td>

                                            <td>
                                                <div class="button-items">
                                                    @if (obj.StatusContent == false)
                                                    {
                                                        <span>No Action</span>
                                                    }else
                                                    {

                                                        <a asp-controller="Content" asp-action="Show" asp-route-id="@obj.Id" class="btn btn-outline-secondary waves-effect waves-light" style="width:150px"> Show  </a>

                                                        <a asp-controller="Content" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-outline-primary waves-effect waves-light" style="width:150px"> Edit  </a>

                                                        <a asp-controller="Content" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger waves-effect waves-light" style="width:150px"> Delete </a>
                                                    }

                                                </div>
                                            </td>

                                        </tr>
                                    }
                       
                        
                        
                                </tbody>
                            </table><!--end /table-->
                        </div><!--end /tableresponsive-->
                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div>
</div>

@section Scripts{
    <script src="~/site/dashboard/js/api.js"></script>
    <script src="~/site/dashboard/js/publishAPI.js"></script>
}


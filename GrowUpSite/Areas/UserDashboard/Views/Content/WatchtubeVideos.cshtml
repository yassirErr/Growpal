@model IEnumerable<GrowUp.Model.Watchtube>

<!-- Page Content-->
<div class="page-content">

    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="UserDashboard" asp-controller="User" asp-action="index">GrowPal</a></li>
                       
                            <li class="breadcrumb-item active">Add Video</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Datatable</h4>
                </div><!--end page-title-box-->
            </div><!--end col-->
        </div>
        <!-- end page title end breadcrumb -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                  


                        <div class="table-responsive">
                            <table class="table table-bordered mb-0 table-centered">

                                <thead>
                                    <tr>

                                        <th>Item Video</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var obj in Model)
                                    {
                                        <tr>


                                    
                                            <td style="width:15px">@obj.VideoLink</td>

                                            
                                            <td>
                                        
                                                <div class="button-items">

                                                    <form id="delete-form" asp-controller="Content" asp-action="DeleteItemVideo" asp-route-id="@obj.Id" style="width:150px" method="post">
                                                        @Html.AntiForgeryToken()

                                                        <button type="submit" class="btn btn-outline-danger waves-effect waves-light" onclick="return confirm('Are you sure you want to delete this ?')" style="width:150px">Delete</button>
                                                    </form>


                                                </div>
                                            </td>

                                        </tr>
                                    }



                                </tbody>
                            </table><!--end /table-->
                        </div><!--end /tableresponsive-->
                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div>
</div>

